<% layout('layout/main') -%>
<% block('title', 'Update Product') -%>

<form target="/products/update/<%= product.id %>"  method="POST" enctype="application/x-www-form-urlencoded">
    <div class="form-group col-md-6 offset-md-3">
      <label for="name">Name</label>
      <input type="text" name="name" class="form-control" id="name" value="<%= product.name %>" placeholder="Name" required >
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <label for="photo">Change image</label>
      <input type="file" name="photo" class="form-control-file" id="photo" placeholder="Upload image" >
    </div>
    <div class="form-group col-md-6 offset-md-3">
        <label for="stock">Stock</label>
        <input type="number" name="stock" class="form-control" id="stock" value="<%= product.stock %>" placeholder="Stock" required >
    </div>
    <div class="form-group col-md-6 offset-md-3">
        <label for="description">Description</label>
        <textarea class="form-control" name="description" id="description" value="<%= product.description %>" rows="3" required><%= product.description %>
        </textarea>
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <label for="price">Price</label>
      <input type="number" name="price" class="form-control" id="price" value="<%= product.price %>" placeholder="Price" required >
    </div>
    
    <div class="form-group col-md-6 offset-md-3">
        <button type="submit" class="btn btn-primary" >Submit</button>
    </div>
</form>