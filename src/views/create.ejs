<% layout('layout/main') -%>
<% block('title', 'Add') -%>

<form target="/product/add"  method="POST" enctype="multipart/form-data" >
    <div class="form-group col-md-6 offset-md-3">
      <label for="name">Name</label>
      <input type="text" name="name" class="form-control" id="name" placeholder="Name" required >
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <label for="photo">Upload image</label>
      <input type="file" name="photo" class="form-control-file" id="photo" placeholder="Upload image" required>
    </div>
    <div class="form-group col-md-6 offset-md-3">
        <label for="stock">Stock</label>
        <input type="number" name="stock" class="form-control" id="stock" placeholder="Stock" required >
    </div>
    <div class="form-group col-md-6 offset-md-3">
        <label for="description">Description</label>
        <textarea class="form-control" name="description" id="description" rows="3" required></textarea>
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <label for="price">Price</label>
      <input type="number" name="price" class="form-control" id="price" placeholder="Price" required >
    </div>
    <div class="form-group col-md-6 offset-md-3">
        <button type="submit" class="btn btn-primary" >Submit</button>
    </div>
</form>